<!-- 用户登录 -->
<!DOCTYPE html>
<html>
<head>
    <% include header.ejs %>
</head>
<body>
<% include navbar.ejs %>
<main class="bs-docs-masthead" id="content" role="main">
    <div class="container">
        <form class="form form-horizontal" role="form" action="/own/" method="post">
            <div class="page-header">
                <p class="lead">邮箱注册</p>
            </div>

            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">电子邮箱</label>
                <div class="col-sm-6">
                    <input type="email" class="form-control" id="email" placeholder="关联电子邮箱">
                </div>
                <div class="col-sm-4">
                    <p class="form-control-static">请填写您的电子邮箱地址</p>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">登录密码</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="password" placeholder="设置登录密码">
                </div>
                <div class="col-sm-4">
                    <p class="form-control-static">请设置您的登录密码</p>
                </div>
            </div>
            <div class="form-group">
                <label for="confirm" class="col-sm-2 control-label">确认密码</label>
                <div class="col-sm-6">
                    <input type="password" class="form-control" id="confirm" name="confirm" placeholder="再次确认密码">
                </div>
                <div class="col-sm-4">
                    <p class="form-control-static">请再次确认您的登录密码</p>
                </div>
            </div>
            <div class="form-group">
                <label for="verify" class="col-sm-2 control-label">验证码</label>
                <div class="col-sm-2">
                    <input type="text" class="form-control" id="verify" name="verify" placeholder="填写验证码">
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn btn-info btn-small">获取验证码</button>
                </div>
                <div class="col-sm-4">
                    <p class="form-control-static">请填写邮箱中的验证码</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label"></label>
                <div class="col-sm-10">
                    <div class="checkbox">
                        <label><input type="checkbox">同意<a href="/forget/">使用协议</a></label>
                        <span class="form-control-static">, 勾选此项，表明您同意本网站的用户使用协议</span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-block btn-success">提交注册</button>
                </div>
            </div>
        </form>
    </div>
</main>
</body>
</html>